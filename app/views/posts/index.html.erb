<br><%= link_to("Create Post", { :controller => 'posts', :action => 'new' }) %>

<h1>Posts</h1>
<% @posts.reverse.each do |post| %>
    <div class="post">
        <h2><%= post.title %></h2>
        <div><%= truncate(post.body, :length => 200) %></div>
        <br>
        <%= link_to("Read Post", post) %>
        <div class="weak">
            <%= post.created_at %>
        </div>
    </div>
<% end %>
